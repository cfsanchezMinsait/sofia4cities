{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "Feeds",
    "type": "object",
    "required": [
        "Feed"
    ],
    "properties": {
        "Feed": {
            "type": "string",
            "$ref": "#/datos"
        }
    },
    "datos": {
        "type": "object",
        "required": [ "assetId","assetType", "assetSource","type", "timestamp"],
        "properties": {
               "assetId": {
                        "type": "string"
                },
                "assetType":{
                        "type": "string"
                },
                "assetSource":{
                        "type": "string"
                },
                "assetName":{
                        "type": "string"
                },
                "type": {
                    "type": "string",
                    "enum": [ "FIXED" ,"MOBILE","VIRTUAL"]
                },
               
                "attribs":{
                        "type":"array",
                        "items":{
                            "type":"object",
                            "required":["name","value"],
                            "properties":{
                                "name":{
                                    "type":"string"
                                },
                                "value":{
                                    "type":"string"
                                }
                             },
                            "additionalProperties":false
                        },
                        "minItems":2
                 },
                "geometry": {
                    "type": "object",
                    "oneOf":[
                         {"$ref":"#/point"},
                      {"$ref":"#/linestring"},
                         {"$ref":"#/polygon"}
                       ]
                 },
                 "measuresTimestamp":{
                    "type": "object",
                        "required": [ "$date"],
                        "properties": {
                            "$date": {
                                "type": "string",
                                "format": "date-time"
                            }
                        },
                        "additionalProperties": false
                 },
                 "measuresType":{
                    "type":"string",
                    "enum":["INSTANT","CUMULATIVE","PULSE"]
                 },
                 "measurePeriod":{
                    "type":"number"
                 },
                 "measuresPeriodUnit":{
                    "type":"string",
                    "enum":["m", "s", "h", "d"]
                 },
            "measures": {
                "type": "array",
                "items":{
                    "type":"object",
                    "required":["measure", "unit","method"],
                    "properties":{
                              "name":{
                                 "type":"string"
                                },
                               "desc":{
                                    "type":"string"
                               },
                               "unit":{
                                    "type":"string"
                                },
                               "measure":{
                                    "type":"string"
                               },
                               "method":{
                                    "type":"string"
                                },
                                
                               "oldMeasure":{
                                "type":"string"
                               },
                               "changeDesc":{
                                "type":"string"
                               },
                               "changeTimestamp":{
                                    "type": "object",
                                    "required": [ "$date"],
                                    "properties": {
                                        "$date": {
                                            "type": "string",
                                            "format": "date-time"
                                        }
                                    },
                                    "additionalProperties": false
                               }
                    },
                    "additionalProperties": false
                }
            }
        },
        "additionalProperties":false
    },
    "point":{
        "type":"object",
        "required": [ "coordinates","type" ],
        "properties": {
            "coordinates":{
                 "type":"array",
                 "items":[
                      {
                         "type":"number",
                         "maximum": 90,
                         "minimum": -90  
                      },
                      {
                          "type":"number",
                          "maximum": 180,
                          "minimum": -180 
                       }                          
                    ],
                    "minItems":2,
                    "maxItems":2
                  },
                  "type":{
                        "type":"string",
                        "enum":["Point"]
                  } 
        },
        "additionalProperties":false
    },
    "linestring":{
        "type":"object",
        "required": [ "coordinates","type" ],
        "properties": {
            "coordinates":{
                 "type":"array",
                 "items":{
                    "type":"array",
                    "items":[
                      {
                         "type":"number",
                         "maximum": 90,
                         "minimum": -90  
                      },
                      {
                          "type":"number",
                          "maximum": 180,
                          "minimum": -180 
                       }                          
                    ],
                    "minItems":2,
                    "maxItems":2
                 },
                 "minItems":2
            },
            "type":{
                        "type":"string",
                        "enum":["LineString"]
                  }
        },
        "additionalProperties":false        
    },
    "polygon":{
    "type":"object",
        "required": [ "coordinates","type"],
        "properties": {
            "coordinates":{
                 "type":"array",
                 "items":{
                    "type":"array",
                    "items":[
                        {
                         "type":"number",
                         "maximum": 90,
                         "minimum": -90  
                      },
                      {
                          "type":"number",
                          "maximum": 180,
                          "minimum": -180 
                       }  
                    ],
                     "minItems":3
                 }
            },
            "type":{
                        "type":"string",
                        "enum":["Polygon"]
                  }
        },
        "additionalProperties":false
    }
}