{ "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "PlantillaBase Schema",    
    "type": "object",    
    "required":["PlantillaBase"],
    "properties": {                   
            "timestamp": {                
                "type":"object",
                    "required":["$date"],
                    "additionalProperties":false            
            },            
            "assetId": {                
                "type": "string"            
            },
            "geometry": {
               "type": "object",
               "required":["coordinates","type"],
               "properties":{
                    "coordinates":{
                        "type":"array",
                        "items":{
                            "type":"number"
                        },
                        "minItems":2,
                        "maxItems":2
                     },
                     "type":{
                        "type":"string",
                        "enum":["Point"]
                     }   
               },
               "additionalProperties":false
            },
            "identificador":{
                "type":"string"
            }        
    }, 
    "additionalProperties":false
 }