{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "FeedDesigual",
    "type": "object",
    "required": [
        "desigualStore"
    ],
    "properties": {
        "desigualStore": {
            "type": "string",
            "$ref": "#/datos"
        }
    },
    "datos": {
        "type": "object",
        "required": [
            "retailID",
            "timestamp",
            "category",
            "data"
        ],
        "properties": {
            "retailID": {
                "type": "string"
            },
            "timestamp": {
                "type": "object",
                "required": [
                    "$date"
                ],
                "properties": {
                    "$date": {
                        "type": "string",
                        "format": "date-time"
                    }
                },
                "additionalProperties": false
            },
            "category": {
                "type": "string"
            },
            "data": {
                "type": "object",
                "oneOf": [
                    {
                        "$ref": "#/presenceStore"
                    },
                    {
                        "$ref": "#/opinionCostumer"
                    }
                ]
            },
            "additionalProperties": false
        }
    },
    "opinionCostumer": {
        "type": "object",
        "required": [
            "userName",
            "valueOpinion",
            "comments"
        ],
        "properties": {
            "userName": {
                "type": "string"
            },
            "valueOpinion": {
                "type": "string"
            },
            "comments": {
                "type": "string"
            }
        },
        "additionalProperties": false
    },
    "presenceStore": {
        "type": "object",
        "required": [
            "light",
            "temperature",
            "humidity",
            "totalElectricConsumption",
            "lightConsumption",
            "heatConsumption",
            "noise",
            "numPeopleInShop",
            "numPeopleInPayQueue",
            "numPersonQueueFittingRoom",
            "numPeopleStayWindow",
            "numPeopleSpecialZones"
        ],
        "properties": {
            "light": {
                "type": "number"
            },
            "temperature": {
                "type": "number"
            },
            "humidity": {
                "type": "number"
            },
            "totalElectricConsumption": {
                "type": "number"
            },
            "lightConsumption": {
                "type": "number"
            },
            "heatConsumption": {
                "type": "number"
            },
            "noise": {
                "type": "string"
            },
            "numPeopleInShop": {
                "type": "integer"
            },
            "numPeopleInPayQueue": {
                "type": "integer"
            },
            "numPersonQueueFittingRoom": {
                "type": "integer"
            },
            "numPeopleStayWindow": {
                "type": "array",
                "items": {
                    "type": "object",
                    "required": [
                        "idWindow",
                        "idSensor",
                        "detectPerson",
                        "numPeople"
                    ],
                    "properties": {
                        "idWindow": {
                            "type": "string",
                            "enum": [
                                "window1",
                                "window2"
                            ]
                        },
                        "idSensor": {
                            "type": "string",
                            "enum": [
                                "sensor1",
                                "sensor2",
                                "sensor3",
                                "sensor4",
                                "sensor5",
                                "sensor6"
                            ]
                        },
                        "detectPerson": {
                            "type": "boolean"
                        },
                        "numPeople": {
                            "type": "integer"
                        }
                    },
                    "additionalProperties": false
                },
                "minItems": 12,
                "maxItems": 12
            },
            "numPeopleSpecialZones": {
                "type": "array",
                "items": {
                    "type": "object",
                    "required": [
                        "idZone",
                        "numPeople",
                        "valueOpinion"
                    ],
                    "properties": {
                        "idZone": {
                            "type": "string",
                            "enum": [
                                "zone0",
                                "zone1",
                                "zone2",
                                "zone3",
                                "zone4"
                            ]
                        },
                        "numPeople": {
                            "type": "integer"
                        },
                        "valueOpinion": {
                            "type": "integer"
                        }
                    },
                    "additionalProperties": false
                },
                "minItems": 5,
                "maxItems": 5
            }
        },
        "additionalProperties": false
    }
}