{
    "$schema": "http://json-schema.org/draft-03/schema#",
    "title": "Watorimetro Schema",
    "type": "object",
    "properties": {
        "_id": {
            "type": "object",
            "$ref": "#/identificador"
        },
        "Watorimetro": {
            "type": "string",
            "$ref": "#/datos"
        }
    },
    "identificador": {
        "title": "id",
        "description": "Id insertado del Watorimetro",
        "type": "object",
        "properties": {
            "$oid": {
                "type": "string",
                "required": false
            }
        }
    },  
    "datos": {
        "title": "datos",
        "description": "Info Watorimetro",
        "type": "object",
        "properties": {
            "identificador": {
                "type": "string",
                "required": true
            },
            "timestamp": {
                "type": "integer",
                "minimum": 0,
                "required": true
            },
            "medida": {
                "type": "number",
                "required": true
            },
            "unidad": {
                "type": "string",
                "required": true
            },
            "energiaAcumulada": {
                "type": "number",
                "required": true
            },
            "unidadEnergiaAcumulada": {
                "type": "string",
                "required": true
            },
            "activo": {
                "type": "boolean",
                "required": true
            },
            "coordenadaGps": {
                "required": true,
                "$ref": "#/gps"
            }
        }
    },          
        "gps": {
            "title": "gps",
            "description": "Gps SensorHumedad",
            "type": "object",
            "properties": {
                "altitud": {
                    "type": "number",
                    "required": false
                },
                "latitud": {
                    "type": "number",
                    "required": true
                },
                "longitud": {
                    "type": "number",
                    "required": true
                }
            }
        },
        "additionalItems": false
    }

