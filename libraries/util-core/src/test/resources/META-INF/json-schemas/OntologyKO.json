{ "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "PlantillaBase Schema",    
    "type": "object",    
    "required":["PlantillaBase"],
    "properties": {        
        "PlantillaBase": {            
            "type": "string",            
            "$ref": "#/datos"        
        }    
    }, 
    "additionalProperties":false,
    "datos": {        
        "description": "Info Plantila Base",        
        "type": "object",
        "required":["timestamp","assetId"],
        "properties": {            
            "timestamp": {                
                "type":"string"        
            },            
            "assetId": {                
                "type": "string"            
            },
            "geometry": {
               "type": "object",
               "required":["coordinates","type"],
               "properties":{
                    "coordinates":{
                        "type":"array",
                        "items":{
                            "type":"number"
                        },
                        "minItems":2,
                        "maxItems":2
                     },
                     "type":{
                        "type":"string",
                        "enum":["Point"]
                     }   
               },
               "additionalProperties":false
            }        
       }
  }
 }