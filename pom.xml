<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	
	<groupId>com.indracompany.sofia2</groupId>
	<artifactId>sofia2-parent</artifactId>
	<version>5.0.0-SNAPSHOT</version>
	<packaging>pom</packaging>

	<name>sofia2-parent</name>
	<description>sofia2-parent</description>
	
	<properties>
		<sofia2.version>5.0.0-SNAPSHOT</sofia2.version>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
		<java.version>1.8</java.version>
		<maven.compiler.source>1.8</maven.compiler.source>
		<maven.compiler.target>1.8</maven.compiler.target>
		<javafaker.version>0.14</javafaker.version>
		<jsqlparser.version>0.9</jsqlparser.version>
		<spring-boot.version>1.5.9.RELEASE</spring-boot.version>	
        <spring-boot-admin-server.version>1.5.4</spring-boot-admin-server.version>
        <spring-boot-admin-starter-client.version>1.5.4</spring-boot-admin-starter-client.version>	
	</properties>
	
	<dependencyManagement>
		<dependencies>		
           <dependency>
                <groupId>org.springframework.boot</groupId>
                <artifactId>spring-boot-starter-parent</artifactId>
                <version>${spring-boot.version}</version>
                <scope>import</scope>
                <type>pom</type>
            </dependency>
            <dependency>
		    	<groupId>com.github.javafaker</groupId>
		    	<artifactId>javafaker</artifactId>
		    	<version>${javafaker.version}</version>
		    	<scope>test</scope>
			</dependency>
			<dependency>
	            <groupId>de.flapdoodle.embed</groupId>
	            <artifactId>de.flapdoodle.embed.mongo</artifactId>
	            <version>2.0.0</version>
	            <scope>test</scope>
	        </dependency>
	        <dependency>
	            <groupId>cz.jirutka.spring</groupId>
	            <artifactId>embedmongo-spring</artifactId>
	            <version>RELEASE</version>
	            <scope>test</scope>
	         </dependency> 
		</dependencies>
	</dependencyManagement>
	
	<modules>
		<module>sofia2-springboot-autoconfigure-starter</module>
		<module>ssap</module>
		<module>config-model</module>
		<module>persistence-ri</module>
        <module>systemconfig-init</module>	
		<module>iotbroker</module>		
		<module>controlpanel</module>		
        <module>sofia2-monitoring-ui</module>				
	</modules>
	
	<build>
		<plugins>
			<plugin>
				<groupId>org.springframework.boot</groupId>
				<artifactId>spring-boot-maven-plugin</artifactId>
			</plugin>
		</plugins>
		<resources>
		  <resource>
			<directory>src/test/resources</directory>
			<includes>
			  <include>**/*.properties</include>
			  <include>**/*.yml</include>
			</includes>
		  </resource>	  
		  <resource>
			<directory>src/main/resources</directory>
			<includes>
			  <include>**/*.properties</include>
			  <include>**/*.yml</include>
			  <include>**/*.*</include>
			</includes>
		  </resource>	  
		</resources>
	</build>
	
</project>
	